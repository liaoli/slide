<com.slide.view.BinarySlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_menu"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    zhy:rightPadding="0dp">

    <com.slide.view.MyScroolView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"

        >

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

        <include
            layout="@layout/layout_menu2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/eee"
            android:gravity="center"
            android:orientation="horizontal">

            <fragment
                android:id="@+id/content"
                android:name="com.slide.liaoli.ContentFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>


    </com.slide.view.MyScroolView>

</com.slide.view.BinarySlidingMenu>